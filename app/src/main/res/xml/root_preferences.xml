<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="앱 정보">

        <Preference
            app:key="appVer"
            app:title="앱 버전"
            app:summary="@string/versionName"
            />

        <Preference
            app:key="appStore"
            app:title="별점주기"
            />

        <Preference
            app:key="appShare"
            app:title="공유하기"
            />

        <Preference
            app:key="appPrivacy"
            app:title="개인정보처리방침"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="문의하기">

        <Preference
            app:key="saveChatError"
            app:title="채팅이 목록에 안떠요!"
            />

        <Preference
            app:key="appOpinion"
            app:title="간편 의견 접수"
            />

        <Preference
            app:key="appEmail"
            app:title="이메일로 문의하기"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="알림">
        <SwitchPreferenceCompat
            app:key="appNoti"
            app:title="알림 받기"
            app:defaultValue="true"
            />
    </PreferenceCategory>

</PreferenceScreen>
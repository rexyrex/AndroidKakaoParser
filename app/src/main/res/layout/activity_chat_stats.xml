<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChatStatsActivity">

    <TextView
        android:id="@+id/chatStatsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chatAmountPieChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatStatsTV" />

    <Button
        android:id="@+id/loadDayDtlBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="챗 열기"
        app:layout_constraintBottom_toTopOf="@+id/findInChatBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/daysSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:popupBackground="@android:color/holo_blue_light"
        app:layout_constraintBottom_toTopOf="@+id/findInChatBtn"
        app:layout_constraintEnd_toStartOf="@+id/loadDayDtlBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/findInChatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="찾기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/findInChatET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="문장 검색"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/findInChatBtn"
        app:layout_constraintEnd_toStartOf="@+id/findInChatBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/loadDayDtlBtn"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/loadDayDtlBtn"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
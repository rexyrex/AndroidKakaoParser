<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/quizStartBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_show_more_btn"
        android:fontFamily="@font/nanum_square_round_r"
        android:text="퀴즈 시작"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizFragScoreTV" />

    <Button
        android:id="@+id/quizInstructionsBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_show_more_btn"
        android:fontFamily="@font/nanum_square_round_r"
        android:text="자주 묻는 질문"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizStartBtn" />

<!--    <Button-->
<!--        android:id="@+id/quizMyRankingBtn"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="wrap_content"-->

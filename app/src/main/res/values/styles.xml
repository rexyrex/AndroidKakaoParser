<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- <item name="android:windowLightStatusBar">true</item> -->
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>
        <!-- <item name="android:windowLightStatusBar">true</item> -->
    </style>

    <style name="PauseDialog2" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">

    </style>

    <style name="PopupStyle" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="PopupStyleLight" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/lightBrown</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanum_square_round_b</item>
    </style>

    <style name="FadeInAndFadeOut">
        <item name="android:windowEnterAnimation">@anim/fade_in_fast</item>
<!--        <item name="android:windowExitAnimation">@anim/fade_out_fast</item>-->
    </style>

    <style name="QuizResPopup" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/FadeInAndFadeOut</item>
    </style>



</resources>
